<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.14.xsd">

    <changeSet id="create-inventories-table" author="pdcthanh">
        <createTable tableName="inventories">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="sku" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="quantity" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="bigint"/>
            <column name="created_by" type="varchar(32)"/>
            <column name="updated_at" type="bigint"/>
            <column name="updated_by" type="varchar(32)"/>
        </createTable>
    </changeSet>

</databaseChangeLog>