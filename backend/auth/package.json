{
  "name": "backend",
  "version": "0.0.0",
  "description": "TypeScript + Sequelize + MySQL + Express API Server",
  "author": "",
  "license": "ISC",
  "scripts": {
    "start": "npm run build && cross-env NODE_ENV=production node dist/app.js",
    "dev": "cross-env NODE_ENV=development nodemon",
    "build": "swc src -d dist --source-maps --copy-files",
    "build:tsc": "tsc && tsc-alias",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testMatch='**/__tests__/**/*.test.ts'",
    "test:integration": "jest --testMatch='**/__tests__/**/*.spec.ts'",
    "test:e2e": "jest --config jest.e2e.config.js",
    "test:ci": "jest --ci --coverage",
    "lint": "eslint --ignore-path .gitignore --ext .ts src/",
    "lint:fix": "npm run lint -- --fix",
    "deploy:prod": "npm run build && pm2 start ecosystem.config.js --only prod",
    "deploy:dev": "pm2 start ecosystem.config.js --only dev",
    "migrate": "npx sequelize-cli db:migrate",
    "migrate:undo": "npx sequelize-cli db:migrate:undo"
  },
  "dependencies": {
    "amqplib": "^0.10.5",
    "apollo-server-express": "^3.12.0",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "envalid": "^7.3.1",
    "express": "^4.18.1",
    "express-rate-limit": "^7.5.0",
    "firebase": "^10.12.2",
    "graphql": "^16.6.0",
    "helmet": "^8.0.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.0.3",
    "morgan": "^1.10.0",
    "mysql2": "^3.9.7",
    "nodemailer": "^6.9.9",
    "passport": "^0.7.0",
    "path": "^0.12.7",
    "redis": "^4.7.0",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.33.0",
    "socket.io": "^4.6.1",
    "swagger-jsdoc": "^6.2.1",
    "swagger-ui-express": "^5.0.1",
    "twilio": "^5.4.2",
    "winston": "^3.8.1",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.220",
    "@types/amqplib": "^0.10.6",
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^5.0.0",
    "@types/hpp": "^0.2.2",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.3",
    "@types/node": "^22.10.7",
    "@types/sequelize": "^4.28.14",
    "@types/supertest": "^2.0.12",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.18.0",
    "globals": "^15.11.0",
    "husky": "^8.0.1",
    "jest": "^29.7.0",
    "lint-staged": "^15.4.1",
    "node-config": "^0.0.2",
    "nodemon": "^3.1.0",
    "pm2": "^5.2.0",
    "prettier": "^3.4.2",
    "sequelize-cli": "^6.6.0",
    "supertest": "^6.3.3",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.7.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.12.2"
  }
}
